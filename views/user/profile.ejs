<%-include('/cart/views/layout')-%>








    <style>
       
		  .table_wrapper
		  {
		    display: block;
		  
		    white-space: nowrap;
		   
		   }
    </style>

<div style='padding:50px 60px;'>
  

   <span class='succ-text'>

	   <span>All Orders Are</span>
	   <span> <img src='/ajstyle/ordericon.jpg' style='width:30px;height:30px;'></span>
   </sapn>

</div>


<div class="row">
<div class="col-lg-6">

  <% for(var i=0;i<orders.length;i++) {%>
      <div class="table-responsive  " > 
	         <table class="table">
	                  <span style='color:rgb(0, 51, 0);font-family:Courier New;font-weight:bold;padding:20px 10px;'>Order <%= i%> </span>
	                  <span> <%=orders[i].today%></span>
					  <thead>
						    <tr>
							      <th scope="col">#</th>
							      <th scope="col">Item_Name</th>
							      <th scope="col">Quantity</th>
							      <th scope="col">Price</th>
							      
						    </tr>
					  </thead>
				   <% for(var j=0;j<orders[i].itemdetail.length;j++) {%>
				       
				           
							  <tbody>
								    <tr>
									      <th scope="row"><%=j%></th>
									      <td><%=orders[i].itemdetail[j].titles%></td>
									      <td><%=orders[i].itemdetail[j].qty%></td>
									       <td><%=orders[i].itemdetail[j].price%></td>
									      
									      
								    </tr>

								    
							  </tbody>

				    <%}%>
	       </table>
    </div>


   
    <div class='row'>
	     <div class="btn btn-danger col-lg-4" role="alert" style='text-align:center'>
	       Total Price is  :-<%=orders[i].price%> <i class='fa fa-check-circle-o'></i>
	     </div>
	     <div class='col-lg-8'></div> 
	</div> 
	</br></br> </br>      
  <%}%>    

</div>

 <div  class='col-lg-4' style='margin:0 auto' >
   <span class='succ-text'>

	   <span>Your Profile: <i class='fa fa-user' style="border:1px solid orange;border-radius:50%;margin:25px;padding:5px 10px"></i></span>
   </span>	   
   <div style='border:1px solid black;padding:20px 0px ' class='shadow '>

          <div class='row ' style='border:0px solid gray;' >
             <div class='col'>
                <center>Name</center>
             </div>
             <div class='col'>
                 <%=orders[0].name%>
             </div>
          </div></br>

          <div class='row ' style='border:0px solid gray;'>
             <div class='col'>
                <center>Address</center>
             </div>
             <div class='col'>
                 <%=orders[0].address%>
             </div>
          </div></br>


          <div class='row ' style='border:0px solid gray;'>
             <div class='col'>
                <center>Contact</center>
             </div>
             <div class='col'>
                 <%=orders[0].contact%>
             </div>
          </div></br>


           <div class='row ' style='border:0px solid gray;'>
             <div class='col'>
                <center>Total Order</center>
             </div>
             <div class='col'>
                 <%=orders.length%>
             </div>
          </div></br>



          <div class='row ' style='border:0px solid gray;'>
             <div class='col'>
                <center>Your Email</center>
             </div>
             <div class='col'>
                 <%=orders[0].email%>
             </div>
          </div></br>


   </div> 
   
</div>

 </div>


</div>


